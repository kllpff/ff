APP_NAME="FF Framework"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# Encryption Key (generate with: php -r "echo bin2hex(random_bytes(32));")
APP_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ff_framework
DB_USERNAME=root
DB_PASSWORD=

# Cache Configuration
CACHE_DRIVER=array

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Logging
LOG_LEVEL=info

# Email Configuration (for notifications)
ADMIN_EMAIL=admin@example.com

# Telegram Configuration (optional - for notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
